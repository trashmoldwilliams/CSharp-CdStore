<h1>CD Store</h1>
@if (@Model.Count == 0)
{
  <h3>No CD's in the store</h3>
} else
{
  <h2>Current Selection</h2>
  <ul>
    @foreach (var cd in Model)
    {
      <li>@cd.GetAlbumTitle()
        <ul>
          <li>By: @cd.GetArtist()</li>
          <li>Price: @cd.GetPrice()</li>
          <br>
        </ul>
      </li>
    }
  </ul>
}


<p>
  <a href="/cds/new">Add a cd to our selection</a>
</p>

<p>
  <a href="/cds/search">Too many to choose from? Search here.</a>
</p>
